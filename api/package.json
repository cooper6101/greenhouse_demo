{
  "name": "@greenhouse_demo/server",
  "description": "Greenhouse Demo App",
  "main": "index.js",
  "version": "1.0.0",
  "author": "Trey Cooper - cooper6101@gmail.com",
  "private": true,
  "engines": {
    "node": ">=20.2.0"
  },
  "scripts": {
    "clean": "rm -rf build & rm -rf node_modules yarn.lock bun.lockb",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev:build": "tsc && cp .env build/.env",
    "dev": "export NODE_ENV=development; cd server && nodemon index.ts",
    "dev:bun": "bun --watch ./server/index.ts",
    "type-check": "tsc --noEmit",
    "start": "export NODE_ENV=production; node build/index.js",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "test": "export NODE_ENV=test; jest --runInBand --forceExit"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@propelauth/node": "^2.1.33",
    "axios": "^1.7.4",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "~4.16.1",
    "fastify": "^5.6.1",
    "fastify-qs": "^5.0.0",
    "form-data": "^4.0.0",
    "morgan": "~1.9.1",
    "pino": "^8.11.0",
    "pug": "~3.0.2",
    "qs": "^6.11.2",
    "zod": "^3.22.2",
    "zod-validation-error": "^1.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@jest/globals": "^30.1.2",
    "@jest/types": "^29.6.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^24.9.2",
    "@types/sinon": "^10.0.17",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "sinon": "^16.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
